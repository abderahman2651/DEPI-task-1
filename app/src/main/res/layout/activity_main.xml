<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assignment1"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:textSize="30dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic|bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/title"
        android:gravity="center"
        android:padding="12dp"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/android_developer"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/flutter_developer"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"

        >
        <TextView
            android:paddingLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Name Is :"
            android:contentDescription="You Adroid_Developer ? "
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abderahman Mahmoud "
            android:contentDescription="You Flutter_Developer ?"
            android:textSize="20dp"
            />
    </LinearLayout>
    <TextView
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        />
    <TextView
        android:paddingLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Age Is : 20"
        android:textSize="20dp"/>

</LinearLayout>
